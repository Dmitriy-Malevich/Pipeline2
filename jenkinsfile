        stage('Build Image') {
            steps {
                sh 'docker build -t dmitriy228/my-app .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d dmitriy228/my-app'
            }
        }
        stage('Deploy') {
            steps {
		sh 'whoami'
		sh 'hostname'
		sh 'docker push dmitriy228/my-app'
            }
        }
    }
}
